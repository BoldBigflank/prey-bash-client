alias md5sum='/sbin/md5 -r'

readonly logged_pid=`ps -ax | grep loginwindow.app | grep -v grep | awk '{print $1}'`

readonly system_path="/Library"
readonly users_path="/Users"
readonly programs_path="/Applications"

readonly airport='/System/Library/PrivateFrameworks/Apple80211.framework/Versions/Current/Resources/airport'
# readonly prey_agent_plist="/Library/LaunchDaemons/com.prey.agent.plist"

get_osx_version(){

	local pc_os_number=`sw_vers -productVersion | cut -c1-4`

	if [[ $pc_os_number == "10.6" || `is_bigger_than "$pc_os_number" 10.6` == 1 ]]; then
		osx_version="snow-leopard"
	elif [[ $pc_os_number == "10.5" || `is_bigger_than "$pc_os_number" 10.5` == 1 ]]; then
		osx_version="leopard"
	elif [[ $pc_os_number == "10.4" || `is_bigger_than "$pc_os_number" 10.4` == 1 ]]; then
		osx_version="tiger"
	else
		osx_version="unknown"
	fi

}

get_osx_version
